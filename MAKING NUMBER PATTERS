#include <iostream>

using namespace std;

int main()
{
int r,rows,i,j,space,k,l;
cout<<"enter no of rows"<<endl;
cin>>rows;
for(i=1;i<=rows;i++)
{
space=rows-i;
while(space>0)
{

cout<<"  ";
space--;
}
k=i;
for(j=0;j<i;j++)
		{

			cout<<" "<<k;
			k++;
		}

r=(k-2);
for(l=j;l>1;--l)
{
	cout<<" "<<r;
	r--;
}

cout<<endl;
}
return 0;
}


