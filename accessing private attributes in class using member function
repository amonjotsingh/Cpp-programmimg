
#include<iostream>
#include<vector>
#include<string>
using namespace std;

class account{
	//attributeS
	string name{"account"};
	double balan{0};
	void setbalance(double bal){balan=bal;cout<<"balance is set to "<<balan<<endl;}
public:
	double getbalance(){return balan;}
	void talk(string what){cout<<name<<" says my balance is"<<what<<endl;}
	//method
	void set_name(string n);
	void deposit(double bal);
	void withdrawl(double bal);
};
void account::set_name(string n){name=n;}
void account::deposit(double amount){balan+=amount;}
void account::withdrawl(double amount)
{
	if((balan-amount)>=0)
		balan-=amount;
	else
		cout<<"balance is not enough"<<endl;
}
int main()
{
	account no1;

	double i=no1.getbalance();
	cout<<"get balance is"<<i<<endl;
	no1.set_name("Amonjot");
	no1.deposit(5000.690);
	no1.withdrawl(3000);
	no1.withdrawl(3000);
	return 0;
}

